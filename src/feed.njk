<h1>feed~ from our brains to your veins</h1>

<hr />

<div class="feed">
{%- for post in collections.published | reverse -%}
<div class="feed-item">
    <h2 class="feed-item-title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>
    {% if post.data.featuredImg %}
    <div class="feed-item-image">
        <img src="{{ post.data.featuredImg }}" />
    </div>
    {% endif %}
    {% if post.data.feedInline %}
    <div class="feed-content">
        {{ post.templateContent | safe }}
    </div>
    {% endif %}
    <p class="feed-item-date">â€“ {{ post.date | htmlDateString }}</p>
    <hr class="item-separator" />
</div>
{%- endfor -%}
</div>

